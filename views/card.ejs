<%- include('partials/header') %> 

<div class="cardInfo">
  <table>
    <tbody>
      <tr>
        <th colspan="3"><%=cardInfo.name%></th>
      </tr>
      <tr>
        <td rowspan="90"><img src=<%= cardInfo.images.small%> alt=<%=cardInfo.name%>></td>
      </tr>
      <tr>
        <td><b>Set:</b></td>
        <td><%=cardInfo.set.name%></td>
      </tr>
      <tr>
        <td><b>Number:</b></td>
        <td><%=cardInfo.number%></td>
      </tr>
      <tr>
        <td><b>Card Type:</b></td>
        <td><%=cardInfo.supertype%></td>
      </tr>
      <% if(cardInfo.hp) {%>
      <tr>
        <td><b>HP:</b></td>
        <td><%=cardInfo.hp%></td>
      </tr>
      <% } %>
      <tr>
        <td><b>Rarity:</b></td>
        <td><%=cardInfo.rarity%></td>
      </tr>

      <% if(cardInfo.flavorText) { %>
      <tr>
        <td><b>Flavor Text:</b></td>
        <td><%=cardInfo.flavorText%></td>
      </tr>
      <% } else { %>
      <tr>
        <td><b>Rules:</b></td>
        <td><%=cardInfo.rules.join(' ')%></td>
      </tr>
      <% } %>

      <tr>
        <td><b>Artist:</b></td>
        <td><%=cardInfo.artist%></td>
      </tr>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %> 