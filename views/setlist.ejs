<!-- Include Header -->
<%- include('partials/header') %> 

<!-- Create setName variable for conciseness -->
<% setName = setInfo.name %>

<div class="container">
    <div class="setInfo">
        <table>
            <tbody>
                <!-- Header Symbol and Title -->
                <tr>
                    <th style="font-size: 1.5em; line-height: 1.5em;" colspan="4">
                        <img src="<%= setInfo.images.symbol %>" alt="<%= setName %>" width="30" height="30">
                        <%= setName %>
                    </th>
                </tr>
                <!-- Header Logo -->
                <tr>
                    <td rowspan="90" style="width: 30%;">
                        <img src="<%= setInfo.images.logo %>" alt="<%= setName %>" class="max-image">
                    </td>
                </tr>
                <!-- Header Info -->
                <tr>
                    <td valign="center">
                        <span>
                            <b>Series: </b> <%= setInfo.series %>
                            <br>
                            <b>Total Cards: </b> <%= setInfo.total %>
                            <br>
                            <% if(setInfo.ptcgoCode){%>
                            <b>PTCGO Set Code: </b> <%= setInfo.ptcgoCode %>
                            <br>
                            <% } %>
                            <b>Release Date: </b> <%= setInfo.releaseDate %>
                            <br>
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
        <% if((setInfo.name).includes("Classic Collection")) {%>
            <% for(i = 0; i < setNumMap[setInfo.id].length; i++) { %>
                <a href="/card/cel25c-<%= classicCollectionDataArray[i] %>">
                    <img src="https://images.pokemontcg.io/<%= setNumMap[setInfo.id][i].split('-')[0] %>/<%= classicCollectionImageArray[i] %>.png" alt="" style="padding: 5px" width="248" height="350">
                </a>
            <% } %>
        <% } else { %>
            <% for(i = 0; i < setNumMap[setInfo.id].length; i++) { %>
                <a href="/card/<%= setNumMap[setInfo.id][i] %>">
                    <img src="https://images.pokemontcg.io/<%= setNumMap[setInfo.id][i].split('-')[0] %>/<%= setNumMap[setInfo.id][i].split('-')[1] %>.png" alt="" style="padding: 5px" width="248" height="350">
                </a>
        <% }} %>    
    </div>
</div>

<!-- Include Footer -->
<%- include('partials/footer') %> 